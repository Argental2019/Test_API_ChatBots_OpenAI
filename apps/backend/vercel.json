{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
       "src": "/(.*)", 
       "dest": "index.js",
      "headers": { "Cache-Control": "public, max-age=60" }
    },
    {
      "src": "^/stats$",
      "headers": { "Cache-Control": "no-store" },
      "dest": "/index.js"
    },
    {
      "src": "^/health$",
      "headers": { "Cache-Control": "no-store" },
      "dest": "/index.js"
    },
    { "src": "/(.*)", "dest": "/index.js" }
  ]
}
